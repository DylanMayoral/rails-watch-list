<%= render 'layouts/banner', banner_title: @list.name, banner_subtitle: "" %>

<div class="container my-5">
  <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-between px-5">
    <div class="col-3 d-flex justify-content-start">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "text-decoration-none text-dark button-17"%>
    </div>
    <div class="col-3 d-flex justify-content-end">
      <%= link_to "Delete list", list_path(@list), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-decoration-none text-dark text-center py-2 button-17" %>
    </div>
</div>

<div class="container my-3 d-flex">




    <% @bookmarks.each do |bookmark| %>

    <div class="card-custom m-3">
      <i class="fa-solid fa-trash remove"></i>
    <div class="poster"><img src="<%=bookmark.movie.poster_url %>"></div>
    <div class="details">
              <h3><%= bookmark.movie.title %></h3>
              <div class="rating d-flex">
  <i class="fa-solid fa-star me-1"></i>
  <p class="mb-0" style="line-height: 1;"><strong><%= bookmark.movie.rating %>/10</strong></p>
</div>
<div class="tags">
    <span> <%= bookmark.comment %> </span>
  </div>
  <div class="info">
    <p><%= bookmark.movie.overview %><p>
  </div>

</div>
</div>
<% end %>
    </div>
    </div>
